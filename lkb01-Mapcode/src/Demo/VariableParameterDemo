package com.lkbhua.Demo;

public class VariableParameterDemo {
    public static void main(String[] args) {
        /* 可变参数：方法形参的个数是可以变化的
           格式： 属性类型 ... 名字
                 int ...args
           细节：
           1、在方法的形参中最多只能写一个可变参数
           2、在方法当中除了可变参数以外还有其他的参数，那么可变参数要写到最后
        */
        getSum(1,2,3,4,5);
    }

    // 底层
    // 可变参数的底层就是一个数组而已
    public static int getSum(int...args){
        System.out.println(args); // [I@1b6d3586
        // ]: 表示数组
        // I: 表示int类型 @1b6d3586: 数组存储地址
        int sum = 0;
        for (int i = 0; i < args.length; i++) {
            sum += args[i];
        }
        System.out.println(sum);
        return args.length;
    }

}
